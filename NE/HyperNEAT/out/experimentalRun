#!/bin/bash
if [ $# -lt 4 ]
then
    echo "Usage: $0 rom_path results_path seed num_workers"
    exit 0
fi

date

if [ -a .svn ]
then
    echo "SVN Revision:" `svnversion .`
fi
if [ -a .git ]
then
    echo "Git Revision:" `git rev-parse HEAD`
fi 

echo "Starting Experimental Run..."


let NUMGENS=150
let POPSIZE=100
ROMPATH=$1
RESPATH=$2
SEED=$3
WORKERS=$4

# Experiments Here
for i in {1..1}
do
    /usr/bin/python master.py -e atari_evaluate -p atari_generate -d data/AtariFTNeatExperiment.dat -n $POPSIZE -g $NUMGENS -G $ROMPATH -w $WORKERS -r $RESPATH -R $SEED
done

echo "Experiments Finished!"
date

#echo "Atari experiments for $ROMPATH finished. Have a wonderful day!" | mail -s "[master.py - $ROMPATH] Experiment Finished!" mhauskn@cs.utexas.edu
