#!/bin/bash
date

if [ -a .svn ]
then
    echo "SVN Revision:" `svnversion .`
fi
if [ -a .git ]
then
    echo "Git Revision:" `git rev-parse HEAD`
fi 

echo "Starting Experimental Run..."

let STARTGEN=0
let NUMGENS=150
let POPSIZE=100
let WORKERS=20
ROMPATH="../../../ale/roms/asterix.bin"
RESPATH="results/asterix/0"

# Experiments Here
for i in {1..1}
do
    /lusr/bin/python master.py -e atari_evaluate -p atari_generate -d data/AtariExperiment.dat -s $STARTGEN -n $POPSIZE -g $NUMGENS -G $ROMPATH -w $WORKERS -r $RESPATH
done

echo "Experiments Finished!"
date
